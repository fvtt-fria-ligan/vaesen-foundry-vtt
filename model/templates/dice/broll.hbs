<div class="vaesen chat-card">
  
  <div class="card-content  borderimg">
    <div class="dice-roll flexcol">
     
      {{#if flavor}}
      <div class="dice-flavor">{{flavor}}</div>
      {{/if}}
      <div class="dice-result">
        <div class="dice-formula">{{formula}}</div>
        {{{tooltip}}}
        {{#if t2k}}
        <h4 class="dice-total">{{baseSuccessQty}}{{#if ammoSpent}}&nbsp;({{hitCount}}){{/if}}</h4>
        {{else}}
        <h4 class="dice-total">{{total}}</h4>
        {{/if}}
      </div>
    </div>

    {{!-- Extra info added for Year Zero rolls --}}
    {{#if showInfos}}
    {{{infos}}}
    {{/if}}

    {{!-- Push button --}}
    {{#if pushable}}
    <div class="dice-buttons">
      <button class="dice-button push" data-action="push">{{localize "YZUR.CHAT.ROLL.Push"}}</button>
    </div>
    {{/if}}
  </div>
</div>

