<div class="flex row full">
    <div class="flex column heavy-border relationships">
        <b class="title" style="width: 89%; margin: 5px auto;">{{localize "HEADER.HEADQUARTER"}}<br><a class="actor-edit" data-actor-id="{{system.headquarter}}">{{ actor.flags.vaesen.headquarterName }}</a></b>
        <b class="title" style="width: 89%; margin: 5px 16px 5px;">{{localize "HEADER.RELATIONSHIPS"}}</b>
        <div class="relationships flex column margin">
            <div class="relationship grid grid-3col-fr center light-border w-100">
                <b class="name">{{localize "RELATIONSHIP.WT"}}</b>
                <b class="description">{{localize "RELATIONSHIP.NT"}}</b>
                <a class="button item-create" title='{{localize  "UI.ADD"}}' data-type="relationship"><i class="fas fa-plus"></i></a>
            </div>
            <div class="scrollable">
                {{#each items as |item|}}
                    {{#if item.isRelationship}}

                        <div class="relationship item center align-center" data-item-id="{{item._id}}">
                            <div class="grid grid-3col-fr w-100" style="width: 100%;">
                            <div class="name">{{item.name}}</div>
                            <div class="description">{{item.system.description}}</div>
                            <div class="button">
                                <a class="item-control to-chat" title='{{localize UI.CHAT}}'><i class="fas fa-comment"></i></a>
                                <a class="item-control item-edit" title='{{localize  "UI.EDIT"}}'><i class="fas fa-edit"></i></a>
                                <a class="item-control item-delete" title='{{localize  "UI.DELETE"}}'><i class="fas fa-trash"></i></a>
                            </div>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>

    </div>
    <div class="flex column heavy-border notepad">
        <b class="title" style="width: 85%; margin: auto;">{{localize "HEADER.NOTES"}}</b>
        {{editor noteHTML target="system.note" button=true owner=owner editable=editable engine="prosemirror" collaborate=false}}
    </div>
</div>