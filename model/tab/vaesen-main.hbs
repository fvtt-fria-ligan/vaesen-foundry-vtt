<div class="flex column full">
    <div class="flex column heavy-border" style="width: 97%;">
        <b class="title" style="width: 95%; margin: auto;">{{localize "HEADER.CONDITIONS"}}</b>
        <div class="conditions flex column margin grow">
            <div class="condition  center light-border grid grid-conditions w-100">
                
                <b class="name span-2">{{localize "CONDITION.NAME"}}</b>
                <b class="bonus">{{localize "CONDITION.BONUS"}}</b>
                
                <a class="button item-create" title='{{localize  "UI.ADD"}}' data-type="condition"><i class="fas fa-plus"></i></a>
            </div>
            <div class="scrollable">
                {{#each items as |item|}}
                    {{#if item.isCondition}}
                        
                        <div class="condition item flex column center " data-item-id="{{item._id}}">
                            <div class="grid grid-conditions">
                            <div class="selected checkbox-container">
                                <label class="checkbox-label">
                                    <input type="checkbox" name="conditon" id="{{item._id}}"
                                      
                                    {{#if item.system.active}}
                                        checked 
                                    {{/if}}
                                    {{#if ../actor.flags.vaesen.blockCondition}}
                                        onclick="ui.notifications.warn(`Vaesen's conditions should be applied in tokens only.`); return false;" 
                                    {{/if}}
                                    />
                                    <span class="checkbox-custom rectangular"></span>
                                </label>
                            </div>
                            <div class="name">{{item.name}}</div>
                            <div class="bonus">{{item.system.bonus}}</div>
                            
                            <div class="button">
                                <a class="item-control to-chat" title='{{localize UI.CHAT}}'><i class="fas fa-comment"></i></a>
                                <a class="item-control item-edit" title='{{localize  "UI.EDIT"}}'><i class="fas fa-edit"></i></a>
                                <a class="item-control item-delete" title='{{localize  "UI.DELETE"}}'><i class="fas fa-trash"></i></a>
                            </div>
                            </div>
                        </div>
                        
                        
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>

    <div class="flex column heavy-border wrapper" style="width: 97%;">
        <b class="title" style="width: 95%; margin: auto;">{{localize "HEADER.MAGIC"}}</b>
        <div class="magics flex column margin grow">
            <div class="magic grid grid-3col-fr center light-border w-100">
                <b class="icon">{{localize "MAGIC.ICON"}}</b>
                <b class="name">{{localize "MAGIC.NAME"}}</b>
                
                <a class="button item-create" title='{{localize  "UI.ADD"}}' data-type="magic"><i class="fas fa-plus"></i></a>
            </div>
            <div class="scrollable">
                {{#each items as |item|}}
                    {{#if item.isMagic}}
                        <div class="magic item flex column center align-center" data-item-id="{{item._id}}">
                            <div class="flex row center space-between grow" style="width: 100%;">
                            <img class="icon" src="{{item.img}}" title="{{item.name}}" height="25" width="25"/>
                            <div class="name">{{item.name}}</div>
                            
                            <div class="button">
                                <a class="item-control to-chat" title='{{localize UI.CHAT}}'><i class="fas fa-comment"></i></a>
                                <a class="item-control item-edit" title='{{localize  "UI.EDIT"}}'><i class="fas fa-edit"></i></a>
                                <a class="item-control item-delete" title='{{localize  "UI.DELETE"}}'><i class="fas fa-trash"></i></a>
                            </div>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>