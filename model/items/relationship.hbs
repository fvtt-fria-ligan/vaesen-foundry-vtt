<form class="{{cssClass}} flexcol" autocomplete="off">
    {{!-- Item Sheet Header --}} 
    <div class="item-sheet flexrow">
        <div class="item-sidebar">
            <img class="icon" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        </div>   

        <div class="item-info">
            <h1 class="us-text">{{localize "BIO.RELATIONSHIP"}}</h1>
            <br /><img src="systems/vaesen/asset/h-rule.png" width="90%" />  
            <div class="header-details flexcol">
                <lable>{{localize "RELATIONSHIP.WITH"}}:</lable>
                <span class = "charname">
                    <input name="name" type="text" value="{{item.name}}" />
                </span>
            </div>

            <div class="item-desc flexcol">
                <label>{{localize "RELATIONSHIP.NATURE"}}:</label>
                <input class="relationship-desc" name="data.description" data-field="data.data.description" type="text" value="{{data.data.description}}"/>
            </div>

            <div class="item-notes">
                <label>{{localize "NOTES"}}:</label>
                <textarea id="notes" name="data.notes" rows="6" wrap="soft">{{data.data.notes}}</textarea>
            </div>
        </div>
    </div>
</form>
