<form class="{{cssClass}} flexcol" autocomplete="off">
  {{! Item Sheet Header }}
  <div class="bg-offwhite flex-row flex-start">
    <div class="dl-border w-fc h-100">
      <img class="w-100p border-none br-5" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    </div>

    <div class="w-100 padding-sm">

      <div class="flex-col flex-wrap magin-b-sm">
        <h1 class="center">{{localize "UPGRADE.NAME"}}</h1>
        <br /><img src="systems/vaesen/asset/h-rule.png" class="border-none center w-90" />
      </div>

      <div class="grid grid-4col-fr center gap-sm h-100">

        <h3>
          {{localize "NAME"}}:
        </h3>
        <div class="grid-align-end grid-span-3">
          <input class="light" name="name" type="text" value="{{item.name}}" />
        </div>

        <div>
          <h3>{{localize "UPGRADE.CATEGORY"}}</h3>
          <select name="system.category" style="margin-top: 3px; width: 100%;">
            {{selectOptions config.upgradeCategory selected=data.system.category localize=true}}
          </select>
        </div>

        <div class="flex-row flex-wrap grid-span-3">
          <h3>{{localize "UPGRADE.PREREQUISITE"}}</h3>
          <input class="light" name="system.prerequisite" type="text" value="{{data.system.prerequisite}}" />
        </div>
        <div class="flex-row flex-wrap center">
          <h3>{{localize "UPGRADE.COST"}}</h3>
          <input class="light" name="system.cost" type="text" value="{{data.system.cost}}" />
        </div>
        <div class="grid-span-2">
          <h3>{{localize "BONUS_TYPE.HEADER"}}</h3>
          <select name="system.bonusType" style="margin-top:3px; width: 100%;"> upgradeBonusType
            {{selectOptions config.upgradeBonusType selected=data.system.bonusType localize=true}}
          </select>
        </div>
        {{#ifIn data.system.bonusType config.bonusTypeRequiresBonus}}
        <div class="flex-row flex-wrap center">
          <h3>{{localize "UPGRADE.BONUS"}}:</h3>
          <input class="light" name="system.bonus" type="text" value="{{data.system.bonus}}" />
        </div>
        {{/ifIn}}

      </div>
      <div class="item-notes" style="margin-top: 5px;">

        <div class="function flex-row flex-wrap">
          <b>{{localize "UPGRADE.FUNCTION"}}</b>
          <textarea name="system.function">{{data.system.function}}</textarea>
        </div>
        <div class="asset flex-row flex-wrap">
          <b>{{localize "UPGRADE.ASSET"}}</b>
          <textarea name="system.asset">{{data.system.asset}}</textarea>
        </div>
        <div class="description flex-row flex-wrap">
          <b>{{localize "TALENT.DESCRIPTION"}}</b>
          <textarea name="system.description">{{data.system.description}}</textarea>
        </div>

      </div>

    </div>
  </div>
</form>