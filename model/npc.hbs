<form class="{{cssClass}}" autocomplete="off">
  <div class="npc flex row">
    <div class="right flex column">
      <div class="header flex column heavy-border">
        <div class="name">
          <input name="name" type="text" value="{{actor.name}}" />
        </div>
        <img
          class="profile-img"
          src="{{actor.img}}"
          data-edit="img"
          title="{{actor.name}}"
          height="125"
          width="125"
        />
        <div class="flex column grow wrap" style="margin-left: 5px">
          <div class="flex column physical align-center center">
            <b>{{localize "CONDITION.PHYSICAL"}}</b>
            <div class="flex row align-center" style="justify-content: center">
              <input
                name="system.condition.physical.value"
                type="text"
                value="{{system.condition.physical.value}}"
                data-dtype="Number"
              />
              /
              <input
                name="system.condition.physical.max"
                type="text"
                value="{{system.condition.physical.max}}"
                data-dtype="Number"
              />
            </div>
          </div>
          <div class="flex column mental align-center center">
            <b>{{localize "CONDITION.MENTAL"}}</b>
            <div class="flex row align-center" style="justify-content: center">
              <input
                name="system.condition.mental.value"
                type="text"
                value="{{system.condition.mental.value}}"
                data-dtype="Number"
              />
              /
              <input
                name="system.condition.mental.max"
                type="text"
                value="{{system.condition.mental.max}}"
                data-dtype="Number"
              />
            </div>
          </div>
        </div>
      </div>
      <div class="flex column heavy-border wrapper" style="width: 97%">
        <b class="title">{{localize "HEADER.ARMORS"}}</b>
        <div class="armors flex column margin grow">
          <div class="armor heading grid grid-3col-fr light-border w-100">
            <b class="icon">{{localize "ARMOR.ICON"}}</b>
            <b class="name">{{localize "ARMOR.NAME"}}</b>
            <a
              class="button item-create"
              title='{{localize  "UI.ADD"}}'
              data-type="armor"
              ><i class="fas fa-plus"></i
            ></a>
          </div>
          <div class="scrollable">
            {{#each items as |item|}} {{#if item.isArmor}}

            <div
              class="armor item flex column center align-center"
              data-item-id="{{item._id}}"
            >
              <div class="flex row space-between grow full" data-item-id="{{item._id}}">
                <img
                  class="icon armor-roll"
                  src="{{item.img}}"
                  title="{{item.name}}"
                  height="20"
                  width="20"
                />
                <div class="name">{{item.name}}</div>
                <div class="button">
                  <a class="item-control to-chat" title="{{localize UI.CHAT}}"
                    ><i class="fas fa-comment"></i
                  ></a>
                  <a
                    class="item-control item-edit"
                    title='{{localize  "UI.EDIT"}}'
                    ><i class="fas fa-edit"></i
                  ></a>
                  <a
                    class="item-control item-delete"
                    title='{{localize  "UI.DELETE"}}'
                    ><i class="fas fa-trash"></i
                  ></a>
                </div>
              </div>
            </div>
            {{/if}} {{/each}}
          </div>
        </div>
      </div>
      <div class="flex column heavy-border wrapper" style="width: 97%">
        <b class="title">{{localize "HEADER.WEAPONS"}}</b>
        <div class="weapons flex column margin grow">
          <div class="weapon heading  grid grid-4col-fr center light-border w-100">
            <b class="icon">{{localize "WEAPON.ICON"}}</b>
            <b class="name">{{localize "WEAPON.NAME"}}</b>
            <b class="bonus">{{localize "WEAPON.BONUS"}}</b>
            <a
              class="button item-create"
              title='{{localize  "UI.ADD"}}'
              data-type="weapon"
              ><i class="fas fa-plus"></i
            ></a>
          </div>
          <div class="scrollable">
            {{#each items as |item|}} {{#if item.isWeapon}}
            <div
              class="weapon item flex column center align-center"
              data-item-id="{{item._id}}"
            >
              <div class="flex row space-between grow full" data-item-id="{{item._id}}">
                <img
                  class="icon weapon-roll"
                  src="{{item.img}}"
                  title="{{item.name}}"
                  height="20"
                  width="20"
                />
                <div class="name">{{item.name}}</div>
                <div class="bonus">{{item.system.bonus}}</div>
                <div class="button">
                  <a class="item-control to-chat" title="{{localize UI.CHAT}}"
                    ><i class="fas fa-comment"></i
                  ></a>
                  <a
                    class="item-control item-edit"
                    title='{{localize  "UI.EDIT"}}'
                    ><i class="fas fa-edit"></i
                  ></a>
                  <a
                    class="item-control item-delete"
                    title='{{localize  "UI.DELETE"}}'
                    ><i class="fas fa-trash"></i
                  ></a>
                </div>
              </div>
            </div>
            {{/if}} {{/each}}
          </div>
        </div>
      </div>
      <div class="flex column heavy-border wrapper" style="width: 97%">
        <b class="title">{{localize "HEADER.GEAR"}}</b>
        <div class="gears flex column margin grow">
          <div class="gear heading  grid grid-3col-fr center light-border w-100">
            <b class="icon">{{localize "GEAR.ICON"}}</b>
            <b class="name">{{localize "GEAR.NAME"}}</b>

            <a
              class="button item-create"
              title='{{localize  "UI.ADD"}}'
              data-type="gear"
              ><i class="fas fa-plus"></i
            ></a>
          </div>
          <div class="scrollable">
            {{#each items as |item|}} {{#if item.isGear}}
            <div
              class="gear item flex column center align-center"
              data-item-id="{{item._id}}"
            >
              <div class="flex row space-between grow full">
                <img
                  class="icon"
                  src="{{item.img}}"
                  title="{{item.name}}"
                  height="20"
                  width="20"
                />
                <div class="name">{{item.name}}</div>
                <div class="button">
                  <a class="item-control to-chat" title="{{localize UI.CHAT}}"
                    ><i class="fas fa-comment"></i
                  ></a>
                  <a
                    class="item-control item-edit"
                    title='{{localize  "UI.EDIT"}}'
                    ><i class="fas fa-edit"></i
                  ></a>
                  <a
                    class="item-control item-delete"
                    title='{{localize  "UI.DELETE"}}'
                    ><i class="fas fa-trash"></i
                  ></a>
                </div>
              </div>
            </div>
            {{/if}} {{/each}}
          </div>
        </div>
      </div>
      <div class="flex column heavy-border wrapper" style="width: 97%">
        <b class="title">{{localize "HEADER.MAGIC"}}</b>
        <div class="attribute flex row align-center" data-key="magic">
          <b class="header">{{localize "ATTRIBUTE.MAGIC"}}</b>
          <input
            name="system.attribute.magic.value"
            type="text"
            value="{{system.attribute.magic.value}}"
            data-dtype="Number"
          />
        </div>
        <div class="magics flex column margin grow">
          <div class="magic heading  grid grid-3col-fr center light-border w-100">
            <b class="icon">{{localize "MAGIC.ICON"}}</b>
            <b class="name">{{localize "MAGIC.NAME"}}</b>

            <a
              class="button item-create"
              title='{{localize  "UI.ADD"}}'
              data-type="magic"
              ><i class="fas fa-plus"></i
            ></a>
          </div>
          <div class="scrollable">
            {{#each items as |item|}} {{#if item.isMagic}}
            <div
              class="magic item flex column center align-center"
              data-item-id="{{item._id}}"
            >
              <div
                class="flex row center space-between grow"
                style="width: 100%"
              >
                <img
                  class="icon"
                  src="{{item.img}}"
                  title="{{item.name}}"
                  height="25"
                  width="25"
                />
                <div class="name">{{item.name}}</div>

                <div class="button">
                  <a class="item-control to-chat" title="{{localize UI.CHAT}}"
                    ><i class="fas fa-comment"></i
                  ></a>
                  <a
                    class="item-control item-edit"
                    title='{{localize  "UI.EDIT"}}'
                    ><i class="fas fa-edit"></i
                  ></a>
                  <a
                    class="item-control item-delete"
                    title='{{localize  "UI.DELETE"}}'
                    ><i class="fas fa-trash"></i
                  ></a>
                </div>
              </div>
            </div>
            {{/if}} {{/each}}
          </div>
        </div>
      </div>
    </div>
    <div class="flex column left">
      <div class="sheet-tabs tabs flex row" data-group="primary">
        <b class="item" data-tab="main">{{localize "TAB.MAIN"}}</b>
        <b class="item" data-tab="note">{{localize "TAB.NOTE"}}</b>
      </div>

      <div class="sheet-body flex row">
        <div class="tab" data-group="primary" data-tab="main">
          {{> systems/vaesen/model/tab/npc-main.hbs}}
        </div>

        <div class="tab note" data-group="primary" data-tab="note">
          {{> systems/vaesen/model/tab/npc-note.hbs}}
        </div>
      </div>
    </div>
  </div>
</form>
